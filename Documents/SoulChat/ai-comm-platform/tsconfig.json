{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@agents/*": ["src/agents/*"],
      "@brain/*": ["src/brain/*"],
      "@conversation/*": ["src/conversation/*"],
      "@channels/*": ["src/channels/*"],
      "@api/*": ["src/api/*"],
      "@automation/*": ["src/automation/*"],
      "@database/*": ["src/database/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
