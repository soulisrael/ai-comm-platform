{
  "rules": [
    {
      "trigger": "refund_request_over_100",
      "condition": "Refund amount > $100",
      "action": "handoff_to_manager",
      "priority": "high"
    },
    {
      "trigger": "angry_customer",
      "condition": "Sentiment is very negative for 3+ messages",
      "action": "handoff_to_senior",
      "priority": "high"
    },
    {
      "trigger": "technical_issue",
      "condition": "Issue not in troubleshooting guide",
      "action": "handoff_to_tech",
      "priority": "medium"
    },
    {
      "trigger": "customer_requests_human",
      "condition": "Customer explicitly asks for a human",
      "action": "handoff_immediately",
      "priority": "urgent"
    }
  ]
}
